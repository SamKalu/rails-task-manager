<h1 class="title">Task List</h1>

<div class="list">
  <ul>
    <% @tasks.each do |task| %>
      <div class="list-item">
        <%= link_to task_path(task) do %>
          <div class="task"><li><strong><%= task.title %></strong></li></div>
        <% end %>
        <div class="complete-and-delete">
          <% if task.completed == true %>
            <p id="done"><%= "Done" %></p>
          <% else %>
            <p id="not-done"><%= "Not Done" %></p>
          <% end %>
          <div class="delete"><%= link_to "🗑️", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %></div>
        </div>
      </div>
    <% end %>
  </ul>
</div>

<div class="button"><%= link_to 'New task', new_task_path %></div>